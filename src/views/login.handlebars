<h2 class="mx-5 my-2">Formulario Inicio de sesión</h2>
<div class="mx-5 my-2">
<form action="/auth/login" method="POST">
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="email" id="form2Example1" class="form-control" name="email" />
    <label class="form-label" for="form2Example1">Mail</label>
  </div>
  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" id="form2Example2" class="form-control" name="password"/>
    <label class="form-label" for="form2Example2">Password</label>
  </div>
  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Iniciar sesión</button>
  <!-- Register buttons -->
  <div class="text-center">
    <p>No tienes cuenta? <a href="/auth/registro">Registrate</a></p>
  </div>
</form>
</div>
{{> scripts}}
<script type="module" src="login.js"></script>